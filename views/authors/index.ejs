<h2>Search Author</h2>
<form action="/authors" method = "GET">
    <label for="name">Name </label>
    <input type="text" name="name" id="name" value="<%=searchOption.name%>">
    <button type="submit">Search</button>
</form>
<br>
<%authors.forEach(author => { %>
    <div><%= author.name%></div>
    <a href="/authors/<%= author.id %>">View Author</a>
    <a href="/authors/<%= author.id %>/edit">Edit Author</a>
    <%- include('../partials/deleteForm', {url: `/authors/${author.id}`}) %>
<% }) %>